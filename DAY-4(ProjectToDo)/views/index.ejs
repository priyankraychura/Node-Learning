<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
</head>
<body>
    <form action="/addTask" method="post">
        <input type="text" name="id" placeholder="Sr. no">
        <input type="text" name="task" placeholder="Enter task">
        <select name="priority" id="">
            <option value="high">High</option>
            <option value="medium">Medium</option>
            <option value="low">Low</option>
        </select>
        <button type="submit">Add Task</button>
    </form>
    <table border="1" width="70%">
        <thead>
            <tr>
                <td>Id</td>
                <td>Task</td>
                <td>Priority</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            <% tasks.map((ele, index) => { %>
                <tr>
                    <td><%= ele.id %></td>
                    <td><%= ele.task %></td>
                    <td><%= ele.priority %></td>
                    <td>
                        <a href="/updateData/<%= ele.id %>"><button>Edit</button></a>
                        <a href="/deleteTask/<%= ele.id %>"><button>Delete</button></a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>